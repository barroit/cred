file(STRINGS ${TREE}/arch/.map lines ENCODING UTF-8)

foreach(line ${lines})
  if(${line} MATCHES "[ \t]*#")
    continue()
  endif()

  string(REGEX REPLACE "[ \t]+" ";" line ${line})
  if(NOT arch IN_LIST line)
    continue()
  endif()

  list(GET line 0 arch)
  set(arch ${arch} PARENT_SCOPE)
  set(found 1)
endforeach()

if(NOT found)
  set(arch generic PARENT_SCOPE)
endif()
